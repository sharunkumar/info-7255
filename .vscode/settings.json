{
    "editor.codeActionsOnSave": {
        "source.removeUnusedImports": "always",
        "source.sortImports": "always"
    },
    "editor.formatOnSave": true,
    "npm.packageManager": "bun",
    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome",
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true,
    }
}